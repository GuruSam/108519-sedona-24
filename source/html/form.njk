{% set title = 'Седона: оставить отзыв' %}
{% set current = 'form' %}
{% set heading = 'Форма отзыва' %}
{% extends "layouts/layout.njk" %}
{% block content %}
{% include 'templates/intro-simple.njk' %}
<section class="form">
  <header class="form__header">
    <h2 class="form__title">Оставьте свой отзыв</h2>
    <p class="form__description">Помогите нашим отелям стать лучше! Оставьте отзыв о них, а также о посещенных вами достопримечательностях</p>
  </header>

  <form class="form__container" action="https://echo.htmlacademy.ru" method="post">
    <fieldset class="form-group form-group--personal">
      <legend class="form-group__title">Представьтесь:</legend>

      <label class="form-group__text-field text-field">
        <span class="text-field__label">Имя*:</span>
        <input class="text-field__input" id="name" name="name" type="text" required>
      </label>

      <label class="form-group__text-field text-field">
        <span class="text-field__label">Фамилия*:</span>
        <input class="text-field__input" id="surname" name="surname" type="text" required>
      </label>

      <label class="form-group__text-field text-field">
        <span class="text-field__label">Отчество:</span>
        <input class="text-field__input" id="middle-name" name="middle_name" type="text" required>
      </label>
    </fieldset>

    <fieldset class="form-group form-group--contacts">
      <legend class="form-group__title form-group__title--bordered">Контактная информация:</legend>

      <div class="form-group__contacts-container">
        <label class="form-group__text-field text-field text-field--phone">
          <span class="text-field__label text-field__label--full">Контактный телефон*:</span>
          <span class="text-field__label text-field__label--short">Телефон*:</span>
          <span class="text-field__input-holder">
            <input class="text-field__input" type="tel" placeholder="Введите телефон" name="phone" required>
          </span>
        </label>

        <label class="form-group__text-field text-field text-field--email">
          <span class="text-field__label">Электронная почта*:</span>
          <span class="text-field__input-holder">
            <input class="text-field__input" type="email" placeholder="Введите e-mail" name="email" required>
          </span>
        </label>
      </div>
    </fieldset>

    <fieldset class="form-group form-group--opinion">
      <legend class="form-group__title">Ваше общее впечатление:</legend>

      <div class="radio-button">
        <input class="radio-button__input visually-hidden" id="positive" name="opinion" value="positive" type="radio" checked>
        <label class="radio-button__label" for="positive">Скорее положительное</label>
      </div>

      <div class="radio-button">
        <input class="radio-button__input visually-hidden" id="negative" name="opinion" value="negative" type="radio">
        <label class="radio-button__label" for="negative">Скорее отрицательное</label>
      </div>

      <div class="radio-button">
        <input class="radio-button__input visually-hidden" id="neutral" name="opinion" value="neutral" type="radio">
        <label class="radio-button__label" for="neutral">Затрудняюсь ответить</label>
      </div>
    </fieldset>

    <fieldset class="form-group form-group--sights">
      <legend class="form-group__title form-group__title--bordered">Посещенные достопримечательности:</legend>

      <div class="form-group__checkbox-container">
        <div class="form-group__checkbox checkbox">
          <input class="checkbox__input visually-hidden" id="bridge" name="bridge-visited" type="checkbox" checked>
          <label class="checkbox__label" for="bridge">Мост Дьявола</label>
        </div>

        <div class="form-group__checkbox checkbox">
          <input class="checkbox__input visually-hidden" id="mountain" name="mountain-visited" type="checkbox" checked>
          <label class="checkbox__label" for="mountain">Гора-Колокол</label>
        </div>

        <div class="form-group__checkbox checkbox">
          <input class="checkbox__input visually-hidden" id="slide-park" name="slide-park-visited" type="checkbox" checked>
          <label class="checkbox__label" for="slide-park">Слайд-парк</label>
        </div>

        <div class="form-group__checkbox checkbox">
          <input class="checkbox__input visually-hidden" id="rocks" name="red-rocks-visited" type="checkbox">
          <label class="checkbox__label" for="rocks">Красные скалы</label>
        </div>
      </div>
    </fieldset>

    <div class="form-group form-group--review">
      <span class="form-group__title form-group__title--bordered">Опишите свои эмоции:</span>

      <textarea class="form-group__textarea" name="review" placeholder="Опишите подробно все свои восторги"></textarea>
    </div>

    <div class="form__submit-wrapper">
      <button class="button form__submit-button" type="submit">Отправить отзыв</button>
    </div>
    <span class="form__required">* — обязательные поля</span>
  </form>
</section>

<!-- Для отображения убрать класс popup--hidden -->
<section class="popup popup--failure popup--hidden">
  <div class="popup__container">
    <h3 class="popup__title">Что-то пошло не так!</h3>
    <p class="popup__text">
      Проверьте поля, выделенные красным, скорее всего вы забыли их заполнить
    </p>
    <button class="popup__button button" type="button">Ок</button>
  </div>
</section>

<!-- Для отображения убрать класс popup--hidden -->
<section class="popup popup--success popup--hidden">
  <div class="popup__container">
    <h3 class="popup__title">Ваш отзыв отправлен!</h3>
    <p class="popup__text">
      Спасибо за ваше участие, ваш отзыв уже поступил к нам. <br>
      В ближайшее время мы опубликуем его на сайте.
    </p>
  </div>
  <footer class="popup__footer">
    <button class="popup__button button" type="button">Закрыть окно</button>
  </footer>
</section>
{% endblock content %}
